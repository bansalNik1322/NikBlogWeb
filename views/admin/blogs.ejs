<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Panel</title>
    <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css">
    <link rel="stylesheet" href="/css/admin/user.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js" ></script>
</head>

<body>



    <section id="menu">
        <div class="logo">
            <img src="/images/logo.png" width="40px" alt="">
            <h2>NikBlog</h2>
        </div>
        <div class="items">
            <li><i class="fad fa-chart-pie-alt"></i><a href="/admin/dashboard">Dashboard</a></li>
            <li><i class="fas fa-users"></i><a href="/admin/users">Users</a></li>
            <li><i class="fas fa-blog"></i><a href="/admin/blogs">Blogs</a></li>
            <li><i class="fas fa-sign-out-alt"></i><a href="">Logout</a></li>
            <li><i class="fas fa-lock"></i><a href="">Password</a></li>
            <li><i class="fas fa-bars"></i><a href="">Setting</a></li>
        </div>
    </section>

    <section id="interface">
        <div class="navigation">
            <div class="n1">
                <div>
                    <i id="menubtn" class="fas fa-bars"></i>
                </div>
                <div class="search">
                    <i class="fab fa-searchengin"></i>
                    <input type="text" placeholder="Search">
                </div>
            </div>
            <div class="profile">
                <i class="far fa-bell"></i>
                <img src="/images/1.jpg" alt="">
            </div>
        </div>

        <h3 class="i-name">All Blogs</h3>

   
        <div class="board">
            <table width="100%">
                <thead>
                    <tr>
                        <td>Title</td>
                        <td>Author</td>
                        <td>Category</td>
                        <td>Date</td>
                        <td>Status</td>
                        <td>Read</td>
                        <td>Delete</td>
                    </tr>
                </thead>
                <tbody>
                    <% for(var i=0; i < blogs.length; i++) { %>
                    <tr>
                        <td class="people">
                            
                            <div class="people-de">
                                <p><%= blogs[i].title.substring(1,20) %>..</p>
                            </div>
                        </td>
                        <td class="people-des">
                            <p><%= blogs[i].author %></p>
                        </td>
                        <td class="active">
                            <p><%= blogs[i].category %></p>
                        </td>
                        <td class="role">
                            <p><%= blogs[i].writtenDate.toLocaleString('default', { day: "numeric" , month: "long" ,
                                year:"numeric" })  %></p>
                        </td>
                        <td class="role">
                            <p><%= blogs[i].postedOrNot %></p>
                        </td>
                        <td class="edit"><a href="/admin/blogs/blog-info/<%= blogs[i]._id %>">More</a></td>
                        <td class="edit"><a href="">Delete</a></td>
                    </tr>    
                    <% } %>        
                </tbody>
            </table>
            
        </div>
        <h3 class="i-name">Posted Blogs</h3>

   
        <div class="board">
            <table width="100%">
                <thead>
                    <tr>
                        <td>Title</td>
                        <td>Author</td>
                        <td>Category</td>
                        <td>Date</td>
                        <td>Read</td>
                        <td>Delete</td>
                    </tr>
                </thead>
                <tbody>
                    <% for(var i=0; i < postedBlogs.length; i++) { %>
                        <tr>
                            <td class="people">
                                
                                <div class="people-de">
                                    <p><%= postedBlogs[i].title.substring(1,20) %>..</p>
                                </div>
                            </td>
                            <td class="people-des">
                                <p><%= postedBlogs[i].author %></p>
                            </td>
                            <td class="active">
                                <p><%= postedBlogs[i].category %></p>
                            </td>
                            <td class="role">
                                <p><%= postedBlogs[i].writtenDate.toLocaleString('default', { day: "numeric" , month: "long" ,
                                    year:"numeric" })  %></p>
                            </td>
                            <td class="role">
                                <p><%= postedBlogs[i].postedOrNot %></p>
                            </td>
                            <td class="edit"><a href="/admin/blogs/blog-info/<%= postedBlogs[i]._id %>">More</a></td>
                            <td class="edit"><a href="">Delete</a></td>
                        </tr>    
                        <% } %>  
               
                
                 
               
                 
                </tbody>
            </table>
            
        </div>
    </section>

    <script>
       $('#menubtn').click(function(){
        $('#menu').toggleClass("active")
       })
    </script>
</body>

</html>